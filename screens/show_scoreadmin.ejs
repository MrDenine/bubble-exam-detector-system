<script>
  function createPDF() {
    var pdf = new jsPDF('p', 'pt', 'letter');
    html2canvas(document.body, {
      onrendered: function (canvas) {
        var imgData = canvas.toDataURL("image/png");
        pdf.addImage(imgData, 'PNG', -400, -50,);
        pdf.save("examreport.pdf");
      }
    });
  }
</script>