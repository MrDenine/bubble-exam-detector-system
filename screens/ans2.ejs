  <title>วิเคราะห์ผลคำตอบ</title>
  <style>
    .table-small {
      border-collapse: collapse;
      margin: 25px auto;
      font-size: 0.8em;
      font-family: Arial, sans-serif;
      max-width: 80%;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

    .table-small thead tr {
      background-color: #339933;
      color: #ffffff;
      text-align: left;
    }

    .table-small th,
    .table-small td {
      padding: 10px;
    }

    .table-small tbody tr {
      border-bottom: 1px solid #dddddd;
    }

    .table-small tbody tr:nth-of-type(even) {
      background-color: #f3f3f3;
    }

    .table-small tbody tr:last-of-type {
      border-bottom: 2px solid #339933;
    }

    .table-small tbody tr.active-row {
      font-weight: bold;
      color: #339933;
    }

    .table-small th:first-child {
      width: 70%;
    }

    .table-small th:nth-child(2) {
      width: 15%;
    }

    .table-small th:nth-child(3) {
      width: 15%;
    }

    .table-small th:first-child {
      width: 60%;
      text-align: left;
    }

    .table-small .specific-td {
      text-align: left;
    }
  </style>

</head>
