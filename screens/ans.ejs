<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <title>เฉลยคำตอบ</title>
  <style>
    p {
      margin-left: 3cm;
    }

    .navbar {
      margin-bottom: 20px;
    }

    .navbar-brand {
      margin-left: 20px;
    }

    .navbar-collapse {
      justify-content: flex-end;
    }

    .navbar .btn {
      margin-right: 10px;
    }


    .container {
      max-width: 800px;
      margin-top: 40px;
      text-align: center;
    }

    h1 {
      margin-bottom: 20px;
      text-align: center;
    }

    form {
      margin-bottom: 40px;
    }

    .mb-3 {
      margin-bottom: 15px;
    }

    .form-check {
      display: flex;
      align-items: center;
      justify-content: flex-end;
    }

    .form-check-input {
      margin-right: 1cm;
    }

    .form-check-label {
      margin: 0;
    }

    input[type="checkbox"] {
      margin-right: 1cm;
    }

    input[type="checkbox"]+label {
      display: inline-flex;
      align-items: center;
    }


    .half-width {
      width: 38%;
      float: left;
    }

    .clearfix::after {
      content: "";
      display: table;
      clear: both;
    }


    .submit-button {
      text-align: center;
      margin-top: 30px;
      clear: both;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Computer Programming</a>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <a href="/exammanage" class="btn btn-primary">ย้อนกลับ</a>
      <a href="/logout" class="btn btn-danger">ออกจากระบบ</a>
    </div>
  </nav>

  <div class="container">
    <h1>เฉลยคำตอบ</h1>

    <div class="clearfix">
      <div class="half-width">
        <form>
          <!-- ตอบคำถามที่ 1-20 -->
          <% for (let i=1; i <=50; i++) { %>
            <div class="mb-3">
              <p>ข้อที่ <%= i %>
              </p>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>a" value="a">
                <label class="form-check-label" for="q<%= i %>a">
                  Option A
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>b" value="b">
                <label class="form-check-label" for="q<%= i %>b">
                  Option B
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>c" value="c">
                <label class="form-check-label" for="q<%= i %>c">
                  Option C
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>d" value="d">
                <label class="form-check-label" for="q<%= i %>d">
                  Option D
                </label>
              </div>
            </div>
            <% } %>
        </form>
      </div>

      <div class="half-width">
        <form>
          <!-- ตอบคำถามที่ 21-40 -->
          <% for (let i=51; i <=100; i++) { %>
            <div class="mb-3">
              <p>ข้อที่ <%= i %>
              </p>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>a" value="a">
                <label class="form-check-label" for="q<%= i %>a">
                  Option A
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>b" value="b">
                <label class="form-check-label" for="q<%= i %>b">
                  Option B
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>c" value="c">
                <label class="form-check-label" for="q<%= i %>c">
                  Option C
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="q<%= i %>" id="q<%= i %>d" value="d">
                <label class="form-check-label" for="q<%= i %>d">
                  Option D
                </label>
              </div>
            </div>
            <% } %>
        </form>
      </div>
    </div>

    <div class="submit-button">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>

  </div>

</body>

</html>