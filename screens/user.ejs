<script>
  const wordBtn = document.getElementById('wordBtn');
  const wordModal = new bootstrap.Modal(document.getElementById('wordModal'));

  wordBtn.addEventListener('click', () => {
    wordModal.show();
  });

  const wordFileInput = document.getElementById('wordFileInput');
  const confirmWordBtn = document.getElementById('confirmWordBtn');

  confirmWordBtn.addEventListener('click', async () => {
    var time = "";
    let exam_time = "";
    const textData = document.getElementById('exampleFormControlTextarea1').value;
    const section = document.getElementById('numberDropdown').value;
    const lines = textData.split('\n');
    const extractedData = [];
    const regex = /(\d+-\d+)\s+([\u0E00-\u0E7F]+)\s+([\u0E00-\u0E7F]+)\s*/g;
    const cpe = document.getElementById('exampleInputCPE').value;
    const status = document.getElementById('roleDropdown1').value;
    var selectedValue = document.getElementById('time').value;

    if (selectedValue === "time1") {
      time = "08:00-13:00";
    } else if (selectedValue === "time2") {
      time = "13:00-18:00";
    } else if (selectedValue === "time3") {
      time = "16:00-21:00";
    }

    selectedValue = document.getElementById('exam_time').value;

    if (selectedValue === "exam_time1") {
      exam_time = "09:00-12:00";
    } else if (selectedValue === "exam_time2") {
      exam_time = "13:00-16:00";
    }

    lines.forEach(line => {
      const match = regex.exec(line);
      if (match) {
        extractedData.push({
          user: match[1].replace('-', ''),
          firstName: match[2].trim(),
          lastName: match[3].trim()
        });
      }
    });
    extractedData.shift();

    while ((match = regex.exec(textData)) !== null) {
      extractedData.push({
        user: match[1].replace('-', ''),
        firstName: match[2].trim(),
        lastName: match[3].trim(),
        section: section,
        group: cpe,
        status: status,
        time: time,
        exam_time: exam_time
      });
    }

    extractedData.forEach(data => {
      fetch('/insert_user', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })
        .then(response => {
          if (response.ok) {
            return response.json();
          }
          throw new Error('Network response was not ok.');
        })
        .then(data => {
          console.log(data);
        })
        .catch(error => {
          console.log('Error:', error.message);
        });
    });
  });
</script>
